.mainRecentContent p{
    font-size: 16px;
    font-weight: 400;
    color: #000000;
    margin-bottom: 34px;
    padding: 0px;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
