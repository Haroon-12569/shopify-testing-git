    justify-content: space-between;
    padding-right: 337px;  
    margin-bottom: 12px; 
}
.mainRecentContent .showDateBox p{
    font-size: 16px;
    font-weight: 400;
    color: #000000;
    margin-bottom: 0px;
    padding: 0px;
