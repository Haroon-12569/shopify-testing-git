    background-color: white;
    border-radius: 20px;
    box-shadow: 0px 3px 10px 0px #00000042;
    overflow: hidden;
}
.mainRecentImg{
    width: 100%;
    height: 364px;    
}
.mainRecentImg img{
    width: 100%;
    height: 100%; 
    object-fit: cover;   
}
.mainRecentContent{
    padding: 18px 15px;
}
.mainRecentContent h2{
    font-size: 45px;
    font-weight: 600;
    color: #000000;
    margin-bottom: 6px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.mainRecentContent .showDateBox{
