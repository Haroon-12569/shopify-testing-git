.mainRecentBoxConetent .showDateBox p{
    font-size: 16px;
    font-weight: 400;
    color: #000000;    
    padding: 0px;
    margin-bottom: 0px;
}
.mainRecentBoxConetent .showDateBox p span{    
    font-weight: 600;        
}
.mainRecentBoxConetent p{
    font-size: 16px;
    font-weight: 400;
    color: #000000;
    margin-bottom: 37px;
    padding: 0px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}
/* Banner End */
/* Latest Blog */
.latestBlogSec{
    padding: 200px 0px;
}
.latestBlogSec h2{
    font-size: 45px;
    font-weight: 600;
    color: #000000;
    margin-bottom: 38px;        
}
