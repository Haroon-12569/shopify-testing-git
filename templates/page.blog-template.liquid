<style>
  *{
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
}
html{
    scroll-behavior: smooth;
}

body{
/*     font-family: 'Chivo', sans-serif; */
    font-family: "Neuzeit Office", sans-serif;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden!important;
}

h1, h2, h3, h4, h5, h6{
  font-family: "Neuzeit Office Soft Rounded", sans-serif;
}

a{
    text-decoration: none !important;
}

.container{
    max-width: 1610px;
    margin: 0 auto;
    padding: 0px 15px;
}
.blogBtn{
    font-family: "Neuzeit Office", sans-serif;
    background-color: #cc2000;
    border: 1px solid transparent;
    padding: 16px 50px;
    color: #f8f8f8;
    font-size: 16px;
    font-weight: 400;
    border-radius: 50px;
    text-transform: uppercase;
    display: inline-block;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
}
.blogBtn:hover{
    background-color: transparent;
    border: 1px solid #cc2000;
    color: #cc2000;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
}
/* Main Banner Css */
.mainBannerBlog{
    padding-top: 97px;
    background-image: url('./assets/bannerImg.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    max-height: 636px;
    margin-bottom: 350px;
}
.receipeMore{
    width: 758px;
    margin: 0 auto;
    margin-bottom: 70px;    
}
.receipeMoreHeading{
    margin-bottom: 43px;
}
.receipeMoreHeading h1{
    font-size: 45px;
    font-weight: bold;
    color: #FFFFFF; 
    margin-bottom: 17px;
    padding: 0px;
    text-align: center;
}
.receipeMoreHeading p{
    font-size: 16px;
    font-weight: 400;
    color: #FFFFFF; 
    margin: 0px;
    padding: 0px;
    text-align: center;
}
.serachBoxInp{
    position: relative;
}
.serachBoxInp input{
    font-family: "Neuzeit Office", sans-serif;
    width: 100%;
    border-radius: 50px;
    padding: 23px 182px 23px 25px;
    font-size: 14px;
    color: #A4A4A4;
    font-style: italic;
    background-color: transparent;
    outline: none;
    border: none;
    border: 1px solid white;    
}
.serachBoxInp button{    
    position: absolute;
    top: 6px;
    right: 6px;
}
